{
    "name": "flarum/bbcode",
    "description": "Allow posts to be formatted with BBCode.",
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.8",
        "jaeger/querylist": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Flarum\\BBCode\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        },
        "flarum-extension": {
            "title": "BB代码",
            "category": "feature",
            "icon": {
                "name": "fas fa-bold",
                "backgroundColor": "#238C59",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": ""
        },
        "flarum-cli": {
            "modules": {
                "admin": false,
                "forum": false,
                "js": false,
                "jsCommon": false,
                "css": false,
                "gitConf": true,
                "githubActions": false,
                "prettier": false,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
